            document.getElementById('prioritiesChart'),
            prioritiesConfig
        );

        async function generateIdeas(priorityText, outputElementId) {
            const outputDiv = document.getElementById(outputElementId);
            outputDiv.classList.remove('hidden');
            outputDiv.innerHTML = '<div class="text-center py-4"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white inline-block"></div><p class="mt-2 text-sm">ุฏุฑ ุญุงู ุชููุฏ ุงุฏูโูุง...</p></div>';

            let chatHistory = [];
            const prompt = `ุจุง ุชูุฌู ุจู ุงูููุช ูุฑููฺฏ '${priorityText}' ุฏุฑ ุงุณุชุงู ฺฉุฑูุงูุดุงูุ ูุทูุงู ูพูุฌ ุงุฏู ุงุฌุฑุง ููุขูุฑุงูู ู ุนููุงุช ุจุฑุง ุจุฑูุงููโูุง ูพุดููุงุฏ ฺฉูุฏ. ูุฑ ุงุฏู ุฑุง ุฏุฑ ฺฉ ุจูุฏ ุฌุฏุงฺฏุงูู ู ุจู ุตูุฑุช ุฎูุงุตู ุชูุถุญ ุฏูุฏ.`;
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    outputDiv.innerHTML = `<p class="whitespace-pre-line">${text}</p>`;
                } else {
                    outputDiv.innerHTML = '<p class="text-red-400">ุฎุทุง ุฏุฑ ุฏุฑุงูุช ุงุฏูโูุง. ูุทูุงู ุฏูุจุงุฑู ุชูุงุด ฺฉูุฏ.</p>';
                }
            } catch (error) {
                console.error('Error fetching ideas:', error);
                outputDiv.innerHTML = '<p class="text-red-400">ุฎุทุง ุฏุฑ ุงุชุตุงู ุจู ุณุฑูุฑ. ูุทูุงู ุงุฒ ุงุชุตุงู ุงูุชุฑูุช ุฎูุฏ ุงุทููุงู ุญุงุตู ฺฉูุฏ.</p>';
            }
        }

        async function generateKPIs(priorityText, outputElementId) {
            const outputDiv = document.getElementById(outputElementId);
            outputDiv.classList.remove('hidden');
            outputDiv.innerHTML = '<div class="text-center py-4"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white inline-block"></div><p class="mt-2 text-sm">ุฏุฑ ุญุงู ุชููุฏ ุดุงุฎุตโูุง...</p></div>';

            let chatHistory = [];
            const prompt = `ุจุฑุง ุงูููุช ูุฑููฺฏ '${priorityText}' ุฏุฑ ุงุณุชุงู ฺฉุฑูุงูุดุงูุ ูุทูุงู ุณู ุชุง ูพูุฌ ุดุงุฎุต ฺฉูุฏ ุนููฺฉุฑุฏ (KPI) ูุงุจู ุงูุฏุงุฒูโฺฏุฑ ู ุนููุงุช ูพุดููุงุฏ ฺฉูุฏ. ุงู ุดุงุฎุตโูุง ุจุงุฏ ุจู ุงุฑุฒุงุจ ููููุช ุจุฑูุงููโูุง ูุฑุจูุท ุจู ุงู ุงูููุช ฺฉูฺฉ ฺฉููุฏ. ูุฑ ุดุงุฎุต ุฑุง ุฏุฑ ฺฉ ุจูุฏ ุฌุฏุงฺฏุงูู ุชูุถุญ ุฏูุฏ.`;
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    outputDiv.innerHTML = `<p class="whitespace-pre-line">${text}</p>`;
                } else {
                    outputDiv.innerHTML = '<p class="text-red-400">ุฎุทุง ุฏุฑ ุฏุฑุงูุช ุดุงุฎุตโูุง. ูุทูุงู ุฏูุจุงุฑู ุชูุงุด ฺฉูุฏ.</p>';
                }
            } catch (error) {
                console.error('Error fetching KPIs:', error);
                outputDiv.innerHTML = '<p class="text-red-400">ุฎุทุง ุฏุฑ ุงุชุตุงู ุจู ุณุฑูุฑ. ูุทูุงู ุงุฒ ุงุชุตุงู ุงูุชุฑูุช ุฎูุฏ ุงุทููุงู ุญุงุตู ฺฉูุฏ.</p>';
            }
        }
