    <script>
        const wrapLabel = (label, maxWidth = 16) => {
            if (label.length <= maxWidth) {
                return label;
            }
            const words = label.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).trim().length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            });
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        };

        const prioritiesData = {
            labels: [
                'تقویت و ترویج هویت اسلامی-ایرانی و بومی-محلی',
                'حفظ، احیاء و توسعه هنرهای بومی و صنایع دستی استان',
                'بهره‌گیری از ظرفیت‌های فرهنگی برای توسعه گردشگری و اقتصاد فرهنگ',
                'کاهش آسیب‌های اجتماعی با رویکرد فرهنگی و افزایش مشارکت',
                'گسترش فرهنگ ایثار و شهادت، و تبیین نقش کرمانشاه در دفاع مقدس'
            ].map(label => wrapLabel(label, 16)),
            datasets: [{
                label: 'اولویت‌های فرهنگی',
                data: [10, 10, 10, 10, 10],
                backgroundColor: [
                    '#06D6A0',
                    '#FF6B6B',
                    '#118AB2',
                    '#FFD166',
                    '#F0F0F0'
                ],
                borderColor: '#073B4C',
                borderWidth: 2
            }]
        };

        const prioritiesConfig = {
            type: 'bar',
            data: prioritiesData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        display: false,
                        grid: {
                          display: false
                        }
                    },
                    y: {
                        ticks: {
                            color: '#E5E7EB',
                            font: {
                                size: 12,
                                family: 'Vazirmatn'
                            }
                        },
                         grid: {
                          display: false,
                          borderColor: '#374151'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        bodyFont: {
                            family: 'Vazirmatn'
                        },
                        titleFont: {
                            family: 'Vazirmatn'
                        },
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                    return label.join(' ');
                                } else {
                                    return label;
                                }
                            },
                            label: function(context) {
                                return 'یک اولویت اصلی';
                            }
                        }
                    }
                }
            }
        };

        const prioritiesChart = new Chart(
            document.getElementById('prioritiesChart'),
            prioritiesConfig
        );

        async function generateIdeas(priorityText, outputElementId) {
            const outputDiv = document.getElementById(outputElementId);
            outputDiv.classList.remove('hidden');
            outputDiv.innerHTML = '<div class="text-center py-4"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white inline-block"></div><p class="mt-2 text-sm">در حال تولید ایده‌ها...</p></div>';

            let chatHistory = [];
            const prompt = `با توجه به اولویت فرهنگی '${priorityText}' در استان کرمانشاه، لطفاً پنج ایده اجرایی نوآورانه و عملیاتی برای برنامه‌ها پیشنهاد کنید. هر ایده را در یک بند جداگانه و به صورت خلاصه توضیح دهید.`;
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    outputDiv.innerHTML = `<p class="whitespace-pre-line">${text}</p>`;
                } else {
                    outputDiv.innerHTML = '<p class="text-red-400">خطا در دریافت ایده‌ها. لطفاً دوباره تلاش کنید.</p>';
                }
            } catch (error) {
                console.error('Error fetching ideas:', error);
                outputDiv.innerHTML = '<p class="text-red-400">خطا در اتصال به سرور. لطفاً از اتصال اینترنت خود اطمینان حاصل کنید.</p>';
            }
        }

        async function generateKPIs(priorityText, outputElementId) {
            const outputDiv = document.getElementById(outputElementId);
            outputDiv.classList.remove('hidden');
            outputDiv.innerHTML = '<div class="text-center py-4"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white inline-block"></div><p class="mt-2 text-sm">در حال تولید شاخص‌ها...</p></div>';

            let chatHistory = [];
            const prompt = `برای اولویت فرهنگی '${priorityText}' در استان کرمانشاه، لطفاً سه تا پنج شاخص کلیدی عملکرد (KPI) قابل اندازه‌گیری و عملیاتی پیشنهاد کنید. این شاخص‌ها باید به ارزیابی موفقیت برنامه‌های مربوط به این اولویت کمک کنند. هر شاخص را در یک بند جداگانه توضیح دهید.`;
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    outputDiv.innerHTML = `<p class="whitespace-pre-line">${text}</p>`;
                } else {
                    outputDiv.innerHTML = '<p class="text-red-400">خطا در دریافت شاخص‌ها. لطفاً دوباره تلاش کنید.</p>';
                }
            } catch (error) {
                console.error('Error fetching KPIs:', error);
                outputDiv.innerHTML = '<p class="text-red-400">خطا در اتصال به سرور. لطفاً از اتصال اینترنت خود اطمینان حاصل کنید.</p>';
            }
        }
    </script>

</body>
</html>
