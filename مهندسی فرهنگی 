                                if (Array.isArray(label)) {
                                    return label.join(' ');
                                } else {
                                    return label;
                                }
                            },
                            label: function(context) {
                                return 'ฺฉ ุงูููุช ุงุตู';
                            }
                        }
                    }
                }
            }
        };

